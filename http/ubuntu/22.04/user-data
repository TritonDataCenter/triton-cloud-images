      - arches: [default]
        uri: http://ports.ubuntu.com/ubuntu-ports
  early-commands:
    - sudo systemctl stop ssh

  locale: en_US
  keyboard:
    layout: us

  user-data:
    disable_root: false
    timezone: UTC

  identity:
    hostname: jammy-daily
    username: root
