autoinstall:
  version: 1
  apt:
    geoip: true
    disable_components: []
    preserve_sources_list: false
    primary:
      - arches: [amd64, i386]
        uri: http://us.archive.ubuntu.com/ubuntu
      - arches: [default]
        uri: http://ports.ubuntu.com/ubuntu-ports

# parted -s -a optimal /dev/sda -- mkpart biosboot 1MiB 2MiB set 1 bios_grub on
# parted -s -a optimal /dev/sda -- mkpart '"EFI System Partition"' fat32 2MiB 258MiB set 2 esp on
# parted -s -a optimal /dev/sda -- mkpart boot xfs 258MiB 1058MiB
# parted -s -a optimal /dev/sda -- mkpart primary 1058MiB 100%

  storage:
    swap:
        size: 0
    grub:
        reorder_uefi: false
    config:
      - {ptable: gpt, preserve false, name: '', grub_device: true, type: disk, id: disk0, wipe: superblock-recursive, match: { "size": "largest" } }
      - {device: disk0, size: 1MB, flag: bios_grub, number: 1, flag: linux, preserve: false, type: partition, id: disk0p1}
      - {device: disk0, size: 256MB, flag: esp, number: 2, preserve: false, grub_device: true, type: partition, id: disk0p2}
      - {device: disk0, size: 800MB, flag: linux, number: 3, preserve: false, type: partition, id: disk0p3}
      - {device: disk0, size: -1, flag: linux, number: 4, preserve: false, type: partition, id: disk0p4}

      - {name: rootvg, devices: [disk0p4], preserve: false, type: lvm_volgroup, id: rootvg}
      - {name: rootlv, volgroup: rootvg, size: 100%, preserve: false, type: lvm_partition, id: lvm-partition-rootlv}

      - {fstype: vfat, volume: disk0p2, preserve: false, type: format, id: format-efi}
      - {fstype: ext4, volume: disk0p3, preserve: false, type: format, id: format-bios}
      - {fstype: ext4, volume: lvm-partition-rootlv, preserve: false, type: format, id: format-root}

      - {device: format-root, path: /, type: mount, id: mount-2}
      - {device: format-bios, path: /boot, type: mount, id: mount-1}
      - {device: format-efi, path: /boot/efi, type: mount, id: mount-3}

  early-commands:
    - sudo systemctl stop ssh

  locale: en_US
  keyboard:
    layout: us

  user-data:
    disable_root: false
    timezone: UTC
    users:
