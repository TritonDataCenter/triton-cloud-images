        hashed_passwd: $6$PoeuPl9INRKg51ib$yZcI0ipo4vxa6GA2yI7DhOgY7qnkNQastH0GmtlhD9d57nbaxUh0elFz2OQYtxdEPLnb1V7BS4ke6dvBDHLdR1

  identity:
    hostname: focal-daily
    username: root
